<script>
	fetch('/api/Exercicios/')
		.then(res => res.json())
		.then(data => {
			const nome_exercicios = data.result

			buildTable(nome_exercicios)
		})



	function buildTable(data) {
		var table = document.getElementById('myTable');

		// Mostrar todos os dados e meter a primeira palavra em maisculo
		if (data.length > 0) {
			for (var i = 0; i < data.length; i++) {
				var row = ` <tr>
				<td>${data[i].id}</td>
				<td>${data[i].exercicio}</td>
				<td>${data[i].equipamento}</td>
				<td>${data[i].dificuldade}</td>
				<td>${data[i].musculo}</td>
				<td>
				<button value="${data[i].id}&nome=${data[i].nome}&equipamento_id=${data[i].equipamento_id}&dificuldade_id=${data[i].dificuldade_id}&musculo_id=${data[i].musculo_id}" onclick="editar(this.value)" type="button" class="btn btn-dark btn-small"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg> Editar</button>
				<button value="${data[i].id}" onclick="apagar(this.value)" type="button" class="btn btn-dark btn-small"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg> Apagar</button>
				</td>
				
				</tr>`
				table.innerHTML += row
			}
		} else {
			var row = `<tr><td colspan="6" class="text-center">Nenhum Dado Encontrado</td></tr>`;
			table.innerHTML += row;
		}



	}
	function editar(id) {
		url = "/admin/update_exercicios?id=";
		window.location = url + id;
	}

	function apagar(id) {
		url_api = "/api/exercicio/" + id;
		console.log(url_api);
		fetch(url_api, {
			method: 'delete',
			headers: {
				'Content-Type': 'application/json'
			},

		}).then(response => response.json());

		window.location.href = "/admin/Exercicios";
	}





</script>









<table class="table table-striped table-hover table-light">
	<tr class="bg-danger">
		<th>ID</th>
		<th>Exercício</th>
		<th>Equipamento</th>
		<th>Dificuldade</th>
		<th>Músculo</th>
		<th>Opções</th>
	</tr>
	<tbody id="myTable">

	</tbody>
</table>