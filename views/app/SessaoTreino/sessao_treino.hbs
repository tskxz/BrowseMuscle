{{> header }}


<body class="bg-black text-dark mt-0" data-bs-spy="scroll" data-bs-target="#navScroll"><br><br><br><br>
{{> nav_bar}}
<style>
    .holder {
        background: #f0efe9;
        min-height: 100vh;
    }

    .rounded {
        border-radius: 1rem !important;
    }

    .text-gray {
        color: #aaa;
    }

    input:checked+label {
        text-decoration: line-through;
        color: #adb5bd;
    }

    label {
        cursor: pointer;
    }

    a {
        text-decoration: none;
    }

    input[type="checkbox"] {
        display: none;
    }
</style>

<br><br><br><br>
{{#if success}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{success}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}
{{#if error}}
<div class="alert alert-danger" role="alert">
    <h3>{{error}}</h3>
</div>
{{/if}}
<div class="row">
    <div class="col-lg-8 mx-auto">

        <!-- CHECKBOX LIST -->
        <div class="card rounded border-0 shadow-sm position-relative">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-4 pb-4 text-center">
                    <div class="ms-3">
                        <i class="far fa-calendar-alt fa-3x"></i>
                    </div>
                    <div class="ms-3">
                        <h4 class="text-uppercase fw-weight-bold mb-0">{{nome_treino}}</h4>
                        <p class="text-gray fst-italic mb-0">{{createdAt_treino}}</p>
                    </div>
                </div>
                <div class="d-grid gap-2">

                    <a href="/definir_sessao/{{id_sessao}}" type="button"
                        class="btn btn-primary align-self-center">Adicionar exercício <i class="bi bi-plus"></i></a><br>
                </div>
                {{#each exercicios}}
                {{#ifEquals concluido "1"}}
                <div class="form-check mb-3">
                    <input class="form-check-input" id="flexCheck1" type="checkbox" checked>
                    <label class="form-check-label" for="flexCheck1"><span class="fst-italic pl-1">{{nome}} | {{series}}
                            séries | {{carga}}kg | {{reps_objetivo}} reps</span></label>
                    <i class="bi-check">Concluido</i>

                </div>
                {{/ifEquals}}
                {{#ifEquals concluido "0"}}
                <div class="form-check mb-3">
                    <input class="form-check-input" id="flexCheck1" type="checkbox">
                    <label class="form-check-label" for="flexCheck1"><span class="fst-italic pl-1">{{nome}} | {{series}}
                            séries | {{carga}}kg | {{reps_objetivo}} reps</span></label>
                    <a href="/definir_reps/{{id_sessao}}/{{exercicio_id}}" type="button" class="btn-light"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg>
                    </a>
                </div>
                {{/ifEquals}}

                {{/each}}
                <br>

                {{#ifEquals estado "2"}}
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <form action="/concluir_sessao/{{id_sessao}}" method="post">
                        <button class="btn btn-light align-self-center" type="submit">Finalizar o treino <i
                                class="bi bi-check-square"></i></button>
                    </form>
                </div>
                {{/ifEquals}}
                <br>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/grafico_sessao/{{id_sessao}}" type="button"
                        class="btn btn-light align-self-center">Visualiza Gráfico <i class="bi bi-bar-chart"></i>
                    </a>

                </div>




            </div>
        </div>
    </div>
</div>
</div>
</div>