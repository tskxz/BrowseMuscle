{{#each row}}

<script>
    const ctx = document.getElementById('lineChart').getContext('2d');



    const data = {
        labels: ['Proteina', 'Hidratos de Carbono', 'Gordura'], // Macronutrientes
        datasets: [
            {
                label: 'Gramas',
                data: [{{ this.proteina }}, {{ this.carbs }}, {{ this.gordura }}], // Proteina: 12 | Hidratos de carbono: 29 | Gordura: 12
    backgroundColor: [
        'rgba(255, 99, 132)',
        'rgba(54, 162, 235)',
        'rgba(255, 206, 86)',
    ],
	}]
}
    Chart.defaults.font.size = 16;
    Chart.defaults.color = '#FFF';
    const lineChart = new Chart(ctx, {
        type: 'pie', // Gr√°fico redondo
        data: data,
        options: {
            responsive: false,

            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Macronutrientes {{this.alimento}}',
                    font: {
                        size: 20
                    }

                },

            }
        }
    });

</script>
{{/each}}